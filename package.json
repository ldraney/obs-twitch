{
  "name": "obs-twitch",
  "version": "2.0.0",
  "description": "OBS remote control and monitoring for Twitch streaming",
  "main": "src/cli.js",
  "bin": {
    "obs": "src/cli.js"
  },
  "scripts": {
    "obs": "node src/cli.js",
    "start": "node src/cli.js start",
    "stop": "node src/cli.js stop",
    "status": "node src/cli.js status",
    "monitor": "node src/cli.js monitor",
    "diagnose": "node src/cli.js diagnose",
    "report": "node src/cli.js report",
    "affiliate": "node src/cli.js affiliate",
    "alerts": "node src/cli.js overlay-server",
    "celebrate": "node src/cli.js celebrate",
    "lofi": "node lofi/cli.js",
    "lofi:start": "node lofi/cli.js start",
    "lofi:stop": "node lofi/cli.js stop",
    "lofi:vol": "node lofi/cli.js volume",
    "test:follow": "node tests/follow.js",
    "test:raid": "node tests/raid.js",
    "test:sub": "node tests/sub.js",
    "test:lofi": "npx playwright test --config=lofi/tests/playwright.config.js",
    "test:lofi:smoke": "npx playwright test --config=lofi/tests/playwright.config.js smoke.spec.js",
    "test:lofi:visual": "npx playwright test --config=lofi/tests/playwright.config.js visual.spec.js",
    "test:lofi:update": "npx playwright test --config=lofi/tests/playwright.config.js --update-snapshots",
    "test:lofi:ui": "npx playwright test --config=lofi/tests/playwright.config.js --ui",
    "test:lofi:headed": "npx playwright test --config=lofi/tests/playwright.config.js --headed"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "dotenv": "^16.3.1",
    "ink": "^3.2.0",
    "loudness": "^0.4.2",
    "obs-websocket-js": "^5.0.6",
    "react": "^17.0.2",
    "ws": "^8.18.3"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldraney/obs-twitch.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/ldraney/obs-twitch/issues"
  },
  "homepage": "https://github.com/ldraney/obs-twitch#readme"
}
